    "newLine": "LF",
    "outFile": "build/index.js",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
